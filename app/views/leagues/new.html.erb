<%= render 'shared/league-nav' %>
<%= simple_form_for (@league) do |f| %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.label :content, label: "Current Standings" %>
  <%= f.rich_text_area :content %>
  <%= f.input :passcode %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  
  <%= f.submit "Save Changes" %>
<% end %>
