<!DOCTYPE html>
<html>
  <head>
    <title>RailsSocialFantasyFootball</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <%= video_tag "football_background.mov", autoplay: :autoplay, loop: :loop, muted: :muted, playsinline: true, class: "bg-video" %>
    <%= image_tag "bg-image.png", class: "bg-image" %>
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
