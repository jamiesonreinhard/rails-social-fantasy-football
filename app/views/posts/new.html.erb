<%= simple_form_for (@post) do |f| %>

  <%= f.input :title %>
  <%= f.hidden_field :author, value: current_user.name %>
  <%= f.input :content, as: :text %>
  <%= f.input :league_id, collection: @leagues, label: League %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  
  <%= f.submit "Share" %>
<% end %>